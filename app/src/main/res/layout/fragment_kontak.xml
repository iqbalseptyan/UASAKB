<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/putih">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/crop">
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ada yang bisa dibantu?"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/intro_title_color"/>
        <TextView
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Jika kamu menemukan masalah di aplikasi ini. Silahkan hubungi saya dengan menekan tombol dibawah ini" />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/bglight"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/gmbrTelp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/whatsapp"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginStart="20dp"
            app:cardBackgroundColor="@color/bglight"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="10dp"
                android:id="@+id/gmbrEmail"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/gmail"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/bglight"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="10dp"
                android:id="@+id/gmbrIg"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/instagram"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginStart="20dp"
            app:cardBackgroundColor="@color/bglight"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="10dp"
                android:id="@+id/gmbrFb"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/facebook"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>



</LinearLayout>